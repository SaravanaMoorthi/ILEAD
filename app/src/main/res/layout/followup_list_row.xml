<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginDefault">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/direction_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginDefault"
            android:layout_marginBottom="@dimen/marginDefault"
            android:layout_marginTop="@dimen/marginDefault"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/actioncode_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:layout_weight="50"
                        android:backgroundTint="@color/textColor"
                        android:text="@string/followups_actioncode"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textSizeDefault" />

                    <TextView
                        android:id="@+id/actioncodeValue_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:backgroundTint="@color/textColor"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/textColorHint1"
                        android:textSize="@dimen/textSizeDefault" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nacode_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:layout_weight="50"
                        android:backgroundTint="@color/textColor"
                        android:text="@string/followups_nacode"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textSizeDefault" />

                    <TextView
                        android:id="@+id/nacodeValue_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:backgroundTint="@color/textColor"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/textColorHint1"
                        android:textSize="@dimen/textSizeDefault" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginDefault"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/resultcode_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:layout_weight="50"
                        android:backgroundTint="@color/textColor"
                        android:text="@string/followups_resultcode"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textSizeDefault" />

                    <TextView
                        android:id="@+id/resultcodeValue_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:backgroundTint="@color/textColor"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:minLines="2"
                        android:scrollHorizontally="false"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/textColorHint1"
                        android:textSize="@dimen/textSizeDefault" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nadate_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:layout_weight="50"
                        android:backgroundTint="@color/textColor"
                        android:text="@string/followups_nadate"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textSizeDefault" />

                    <TextView
                        android:id="@+id/nadateValue_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:backgroundTint="@color/textColor"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/textColorHint1"
                        android:textSize="@dimen/textSizeDefault" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginDefault"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/createdon_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:layout_weight="50"
                        android:backgroundTint="@color/textColor"
                        android:text="@string/followups_createdon"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textSizeDefault" />

                    <TextView
                        android:id="@+id/createdonValue_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:backgroundTint="@color/textColor"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/textColorHint1"
                        android:textSize="@dimen/textSizeDefault" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/createdby_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:layout_weight="50"
                        android:backgroundTint="@color/textColor"
                        android:text="@string/followups_createdby"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textSizeDefault" />

                    <TextView
                        android:id="@+id/createdbyValue_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginDefault"
                        android:backgroundTint="@color/textColor"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/textColorHint1"
                        android:textSize="@dimen/textSizeDefault" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>