<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@mipmap/car" />

        <TextView
            android:id="@+id/product_name"
            style="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/product_image"
            android:paddingLeft="@dimen/paddingDefault"
            android:text="Two Wheeler"
            android:textColor="@color/toolBar"
            android:textSize="@dimen/dbtxtViewTableTitle" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_month"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/toolBar">

                <TextView
                    android:id="@+id/currentMonth"
                    style="@style/TextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="November"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dbtxtViewTitle" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_month"
                android:layout_gravity="center"
                android:visibility="visible"
                android:weightSum="1">

                <TextView
                    style="@style/ToolbarTheme"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/toolBar"
                    android:textSize="@dimen/dbtxtViewTableTitle" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    android:background="@color/dashboard_bg"
                    android:padding="@dimen/paddingDefault"
                    android:visibility="visible" />

                <TextView
                    style="@style/ToolbarTheme"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="C0"
                    android:textColor="@color/toolBar"
                    android:textSize="@dimen/dbtxtViewTableTitle" />

                <TextView
                    style="@style/ToolbarTheme"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    android:background="@color/dashboard_bg"
                    android:gravity="center"
                    android:text="C1"
                    android:textColor="@color/toolBar"
                    android:textSize="@dimen/dbtxtViewTableTitle" />

                <TextView
                    style="@style/ToolbarTheme"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="C2"
                    android:textColor="@color/toolBar"
                    android:textSize="@dimen/dbtxtViewTableTitle" />

                <TextView
                    style="@style/ToolbarTheme"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    android:background="@color/dashboard_bg"
                    android:gravity="center"
                    android:text="C3"
                    android:textColor="@color/toolBar"
                    android:textSize="@dimen/dbtxtViewTableTitle" />

                <TextView
                    style="@style/ToolbarTheme"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="C4"
                    android:textColor="@color/toolBar"
                    android:textSize="@dimen/dbtxtViewTableTitle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addChildView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_name"
                android:orientation="vertical" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
